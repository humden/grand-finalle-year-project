<form action="/api/doctors_report" method="post">
        <div class="container">
            <div class="row">

                <div class="col-md-4" style="border: 1px solid; padding: 30px;">
                    <p style="color: blue; font-size: larger;">Patient info</p><hr>
                    <div style="display: flex;">
                        <label for="">First Name:   </label>
                        <h3><%= patient.firstName %></h3>
                    </div>
                    <div style="display: flex;">
                        <label for="">Last Name:   </label>
                        <h3><%= patient.lastName%></h3>
                    </div>
                    <div style="display: flex;">
                        <label for="">Age:   </label>
                        <h3><%= patient.age %></h3>
                    </div>
                    <div style="display: flex;">
                        <label for="">Temperature:   </label>
                        <h3><%= patient.temperature%></h3>
                    </div>
                    <div style="display: flex;">
                        <label for="">Weight:   </label>
                        <h3><%= patient.weight %></h3>
                    </div>
                    <div style="display: flex;">
                        <label for="">BP:   </label>
                        <h3><%= patient.bloodPressure %></h3>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-check form-switch">
                        <input name="conductLab" class="form-check-input" type="checkbox" onclick="Enabledd1(this)" id="flexSwitchCheckChecked">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Lab Test</label>
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="DDL" class="form-label">Lab Test</label>
                    <select name="labType" class="form-select" id="DDL" disabled="disabled" required>
                        <option value="">Choose...</option>
                        <option>Malaria</option>
                        <option value="1">Typhoid</option>
                        <option>Urine</option>
                        <option>Pregnancy</option>
                        <option>HB Full Blood Count</option>
                        <option>Cholestrol</option>
                        <option>Syphilis</option>
                        <option>Blood Grouping</option>
                        <option>Sikel Cell</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid state.
                    </div>
                </div>
                <div class="container col-md-6" style="margin-left: 390px; margin-top: -250px;">
                    <div class="form-floating">
                        <textarea name="doctorsPrescription" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
                            style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Doctors Prescription</label>
                        <button class="btn button mt-2" style="float: right;">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <hr>
        
</form>
